include ./partials/stylesheet.pug

block content

  title Orator 2
  body(ng-app="oratorTwo", ng-controller="MainCtrl")
    container
      row.text-center
        div.post(ng-repeat="post in posts | orderBy: '-title'")
          |  {{post.name}} - {{post.title}}
          //- a(href="{{post.link}}", ng-show="post.link")
          //- |  {{post.name}} - {{post.title}}
          //- span(ng-hide="post.link")
          //- |  {{post.name}} - {{post.title}}
        row.addPost
          form(ng-submit="addPost()")
            input(type="text" placeholder="Name" ng-model="name")
            input(type="text" placeholder="Topic" ng-model="title")
            //- input(type="text" placeholder="LinkedIn" ng-model="link")

            button(type="submit") Post


include ./partials/javascripts.pug
